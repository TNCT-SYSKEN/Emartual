<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <title>Neurnect Main</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pixi.js/4.0.0/pixi.min.js"></script>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/css/bootstrap-select.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.4.8.js"></script>
    <link rel="stylesheet" href="/css/app.css">
  </head>
  <body>
    <!-- ナビゲーションバー -->
    <nav class="navbar navbar-inverse">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Neurnect</a>
      </div>
    </nav>

    <!-- ボタン各種 -->
    <div class="center-block">
      <a class="btn btn-primary" id="reload"><span class="glyphicon glyphicon-refresh"></span></a>
      <a class="btn btn-primary" id="post">投稿</a>
    </div>

    <!-- 投稿フォーム -->
    <div class="form col-sm-offset-3 col-sm-6">
      <div class="close">
        <a class="btn btn-default pull-right" id="form_remove"><span class="glyphicon glyphicon-remove-circle"></span></a>
      </div>
      <div class="ellipse">
        <form method="post">
          <div class="form-group">
            <input type="text" class="form-control" id="uploadtext">
            <input type="submit" class="form-control btn-primary" value="送信">
            <select class="selectpicker" id="graphic-form">
              <option>Ellipse</option>
              <option>Rect</option>
            </select>
          </div>
        </form>
      </div>
    </div>

    <!-- 描画コンテナ -->
    <div id="container"></div>

    <script type="text/ecmascript" src="/js/app.js"></script>
  </body>
</html>
